<p id="notice"><%= notice %></p>

<h1>Listing Attractions</h1>

<table>
  <thead>
    <tr>
      <th>Bumper cars</th>
      <th>Arcade</th>
      <th>Himalaya</th>
      <th>Carousel</th>
      <th>Ballocity</th>
      <th>Lazer</th>
      <th>Runner</th>
      <th>Soft play</th>
      <th>Inflatabales</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @attractions.each do |attraction| %>
      <tr>
        <td><%= attraction.bumper_cars %></td>
        <td><%= attraction.arcade %></td>
        <td><%= attraction.himalaya %></td>
        <td><%= attraction.carousel %></td>
        <td><%= attraction.ballocity %></td>
        <td><%= attraction.lazer %></td>
        <td><%= attraction.runner %></td>
        <td><%= attraction.soft_play %></td>
        <td><%= attraction.inflatabales %></td>
        <td><%= link_to 'Show', attraction %></td>
        <td><%= link_to 'Edit', edit_attraction_path(attraction) %></td>
        <td><%= link_to 'Destroy', attraction, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

