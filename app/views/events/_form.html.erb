<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>
      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field"> 
    <%= f.label :summary %><br>
    <%= f.text_field :summary %>
  </div>
  <div class="field"> 
    Date: <input type="text" id="datepicker">
  </div>
  <div class="field">
    Please enter how many kids will be attending: 
    <br>
    <%= f.select :attendees, (0..500) %>
  </div>
  <div class="field">
    <%= f.label :package %><br>
    <%= f.select :package, [["Birthday"], ["Super Birthday"]] %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
